{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "Bakery API",
        "description": "Esta es la documentacion de la API para el sistema de una panaderia online con servicio a domicilio",
        "license": {
            "name": "SGC",
            "url": "htts://www.google.com"
        }
    },
    "host": "localhost:3000",
    "basePath": "",
    "tags": [
        {
            "name": "Usuarios",
            "description": "API para obtener la informacion de los usuarios de la plataforma"
        },
        {
            "name": "Panes",
            "description": "API para obtener la informacion de los panes de la panaderia"
        },
        {
            "name": "Ingredientes",
            "description": "API para obtener los ingredientes de un pan"
        },
        {
            "name": "Categorias",
            "description": "API para obtener las categorias de un pan"
        }
    ],
    "schemes": [
        "http"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/api/users": {
            "get": {
                "tags": ["Usuarios"],
                "summary": "Listado de todos los usuarios que existen en la plataforma",
                "description": "Servicio que devuelve la informacion detallada de los usuarios de la plataforma.",
                "responses": {
                    "200": {
                        "description": "OK",
                        "examples": {
                            "application/json": [
                                {
                                    "id": 1,
                                    "full_name": "Example Name",
                                    "email": "email@example.com",
                                    "password": "example",
                                    "phone_number": "123456789",
                                    "address": "Example Address",
                                    "role": 1
                                }
                            ]
                        },
                        "schema": {
                            "$ref": "#/definitions/usuario"
                        }
                    },
                    "403": {
                        "description": "Prohibido"
                    }
                }
            },
            "post": {
                "summary": "Crea un nuevo usuario en la plataforma",
                "description": "Servicio que permite crear un nuevo usuario en la plataforma.",
                "operationId": "create",
                "produces": [
                    "application/json"
                ],
                "tags": ["Usuarios"],
                "parameters": [
                    {
                        "name": "user",
                        "in": "body",
                        "description": "Usuario a agregar",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/nuevoUsuario"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "OK"
                    },
                    "403": {
                        "description": "Prohibido"
                    }
                }
            }
        },
        "/api/users/{id}": {
            "get": {
                "tags": ["Usuarios"],
                "summary": "Ver un usuario existente de la plataforma",
                "description": "Servicio que permite ver la informacion de un usuario.",
                "responses": {
                    "200": {
                        "description": "OK",
                        "examples": {
                            "application/json": [
                                {
                                    "id": 3,
                                    "full_name": "Example Name",
                                    "email": "email@example.com",
                                    "password": "example",
                                    "phone_number": "123456789",
                                    "address": "Example Address",
                                    "role": 1
                                }
                            ]
                        },
                        "schema": {
                            "$ref": "#/definitions/usuario"
                        }
                    },
                    "403": {
                        "description": "Prohibido"
                    }
                },
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "ID del usuario",
                        "type": "number",
                        "default": 1
                    }
                ]
            },
            "put": {
                "tags": ["Usuarios"],
                "summary": "Modifica la informacion de un usuario",
                "description": "Servicio que permite modificar la informacion de un usuario.",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID del usuario",
                        "type": "number",
                        "required": true,
                        "default": 1
                    },
                    {
                        "name": "usuario",
                        "in": "body",
                        "description": "Usuario a modificar",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/nuevoUsuario"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "OK"
                    },
                    "403": {
                        "description": "Prohibido"
                    }
                }
            },
            "delete": {
                "tags": ["Usuarios"],
                "summary": "Elimina a un usuario",
                "description": "Servicio que permite eliminar a un usuario de la plataforma.",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID del usuario",
                        "type": "number",
                        "required": true,
                        "default": 1
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "403": {
                        "description": "Prohibido"
                    }
                }
            }
        },
        "/api/breads/": {
            "get": {
                "tags": ["Panes"],
                "summary": "Lista de todos los panes en exhibicion",
                "description": "Servicio que devuelve una lista de los panes en exhibicion",
                "responses": {
                    "200": {
                        "description": "OK",
                        "examples": {
                            "id": 1,
                            "name": "Example Bread 1",
                            "description": "Example description 1",
                            "price": 2.34
                        }, "schema": {
                            "$ref": "#/definitions/pan"
                        }
                    },
                    "403": {
                        "description": "Prohibido"
                    }
                }
            }
        },
        "/api/breads/{id}": {
            "get": {
                "tags": ["Panes"],
                "description": "Servicio que devuelve la informacion de un pan",
                "responses": {
                    "200": {
                        "description": "OK",
                        "examples": {
                            "id": 1,
                            "name": "Example Bread 1",
                            "description": "Example description 1",
                            "price": 2.34
                        }, "schema": {
                            "$ref": "#/definitions/pan"
                        }
                    }, "403": {
                        "description": "Prohibido"
                    }
                },
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "ID del pan",
                        "type": "number",
                        "default": 1
                    }
                ]
            }
        },
        "/api/others/ingredients": {
            "get": {
                "tags": ["Ingredientes"],
                "summary": "Lista todos los ingredientes",
                "description": "Servicio que devuelve una lista de los ingredientes para la elaboracion de un pan",
                "responses": {
                    "200": {
                        "description": "OK",
                        "examples": {
                            "application/json": [
                                {
                                    "id": 1,
                                    "name": "Example Ingredient 1"
                                },
                                {
                                    "id": 2,
                                    "name": "Example Ingredient 2"
                                }
                            ]
                        },
                        "schema": {
                            "$ref": "#/definitions/otros"
                        }
                    },
                    "403": {
                        "description": "Prohibido"
                    }
                }
            }
        },
        "/api/others/categories": {
            "get": {
                "tags": ["Categorias"],
                "description": "Servicio que devuelve una lista de las categorias de un pan",
                "responses": {
                    "200": {
                        "description": "OK",
                        "examples": {
                            "application/json": [
                                {
                                    "id": 1,
                                    "name": "Example Category 1"
                                },
                                {
                                    "id": 2,
                                    "name": "Example Category 2"
                                }
                            ]
                        },
                        "schema": {
                            "$ref": "#/definitions/otros"
                        }
                    },
                    "403": {
                        "description": "Prohibido"
                    }
                }
            }
        }
    },
